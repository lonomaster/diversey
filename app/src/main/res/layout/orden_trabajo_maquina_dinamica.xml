<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/orden_trabajo_pieza_dinamica"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#fff"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            android:background="#ccc" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:text="Modelo máquina : "
                android:textSize="10pt"
                android:textColor="#fff"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textview_modelo_maquina"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:text="@string/nodata"
                android:textColor="#fff"
                android:textSize="9pt" />

            <TextView
                android:id="@+id/id_maquina_hidden"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:text="x"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            android:background="#ccc" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:text="Código: "
                android:textSize="10pt"
                android:textColor="#fff"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textview_campos_codigo"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:text="@string/nodata"
                android:textColor="#fff"
                android:textSize="9pt" />

            <TextView
                android:id="@+id/id_maquina_hidden_campos_codigo"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:text="x"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            android:background="#ccc" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:text="Serie : "
                android:textSize="10pt"
                android:textColor="#fff"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textview_serie"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:text="@string/nodata"
                android:textColor="#fff"
                android:textSize="9pt" />

            <TextView
                android:id="@+id/id_maquina_hidden_serie"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:text="x"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            android:background="#ccc" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:text="Descripción : "
                android:textSize="10pt"
                android:textColor="#fff"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textview_descripcion"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:text="@string/nodata"
                android:maxLines="2"
                android:textColor="#fff"
                android:textSize="9pt" />

            <TextView
                android:id="@+id/id_maquina_hidden_descripcion"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:text="x"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:layout_marginTop="15dp"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"
                android:layout_marginTop="15dp"
                android:orientation="vertical" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:text="Captura de imagen"
                    android:textSize="9pt"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/tomar_imagen"
                    android:layout_width="180dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="15dp"
                    android:background="#219fd8"
                    android:drawableRight="@drawable/boton_camara"
                    android:gravity="center_vertical|center_horizontal|left"
                    android:onClick="onClick"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:text="AGREGAR IMAGEN"
                    android:textColor="#fff"
                    android:textSize="7pt"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/flag_hidden_cont"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_marginLeft="15dp"
                    android:text="1" />
            </LinearLayout>

            <ImageView
                android:id="@+id/orden_trabajo_imageview_img1"
                android:layout_width="100dp"
                android:layout_height="133dp"
                android:layout_marginLeft="100dp"
                android:background="#809fdd" />

            <ImageView
                android:id="@+id/orden_trabajo_imageview_img2"
                android:layout_width="100dp"
                android:layout_height="133dp"
                android:layout_marginLeft="50dp"
                android:background="#809fdd" />

            <ImageView
                android:id="@+id/orden_trabajo_imageview_img3"
                android:layout_width="100dp"
                android:layout_height="133dp"
                android:layout_marginLeft="50dp"
                android:background="#809fdd" />
        </LinearLayout>

        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="1dip"
            android:layout_marginBottom="0dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="0dp"
            android:src="@drawable/linea1" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:orientation="horizontal" >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"
                android:layout_marginTop="15dp"
                android:orientation="vertical" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:text="Captura de codigo QR"
                    android:textSize="9pt"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/tomar_qr"
                    android:layout_width="180dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="15dp"
                    android:background="#529fdd"
                    android:drawableRight="@drawable/ico_camara_agregar_foto"
                    android:gravity="center_vertical|center_horizontal|left"
                    android:onClick="onClick"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:text="CAPTURAR QR"
                    android:textColor="#fff"
                    android:textSize="7pt"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/textView_string_qr"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="15dp"
                    android:text="String Qr"
                    android:textSize="9pt"
                    android:textStyle="italic" />
            </LinearLayout>

            <ImageView
                android:id="@+id/orden_trabajo_imageview_qr"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_marginLeft="150dp"
                android:background="#809fdd"
                android:src="@drawable/foto_qr" />
        </LinearLayout>

        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="1dip"
            android:layout_marginBottom="0dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="15dip"
            android:src="@drawable/linea1" />

        <Button
            android:id="@+id/button1"
            android:layout_width="180dp"
            android:layout_height="40dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="15dp"
            android:background="#529fdd"
            android:drawableRight="@drawable/ico_mas_btn_agregar_lote"
            android:gravity="center_vertical|center_horizontal|left"
            android:onClick="agregarPiezas"
            android:paddingLeft="15dp"
            android:paddingRight="10dp"
            android:text="AGREGAR PIEZA"
            android:textColor="#fff"
            android:textSize="7pt"
            android:textStyle="bold" />

        <LinearLayout
            android:id="@+id/orden_trabajo_piezas_dinamicas"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:orientation="vertical" >
        </LinearLayout>

        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="1dip"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="15dip"
            android:src="@drawable/linea1" />

        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="1dip"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:src="@drawable/linea1" />

        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="1dip"
            android:layout_marginBottom="15dip"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:src="@drawable/linea1" />
    </LinearLayout>

</LinearLayout>