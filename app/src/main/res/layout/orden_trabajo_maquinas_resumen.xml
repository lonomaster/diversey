<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/orden_trabajo_pieza_dinamica"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#fff"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            android:background="#ccc" >

            <TextView
                android:id="@+id/title_modelo_maq_resumen"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:text="Modelo mÃ¡quina :  "
                android:textColor="#fff"
                android:textSize="10pt"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textview_modelo_maquina_resumen"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:text="@string/nodata"
                android:textColor="#fff"
                android:textSize="9pt" />

            <TextView
                android:id="@+id/id_maquina_hidden"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:text="x"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/title_codigo_qr"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:text="String codigo-QR obtenido : "
                android:textSize="9pt"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView_string_qr"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:text="No reconocido"
                android:textSize="9pt"
                android:textStyle="italic" />

        </LinearLayout>

        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="1dip"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="15dip"
            android:src="@drawable/linea1" />

        
        <TextView
            android:id="@+id/title_part_utilizadas"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:text="Partes/piezas utilizadas : "
                android:textColor="#529fdd"
                android:textSize="10pt"
                android:textStyle="bold" />

        <LinearLayout
            android:id="@+id/orden_trabajo_piezas_dinamicas_resumen"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:orientation="vertical" >
        </LinearLayout>

        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="1dip"
            android:layout_marginBottom="15dip"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="15dp"
            android:src="@drawable/linea1" />

    </LinearLayout>

</LinearLayout>