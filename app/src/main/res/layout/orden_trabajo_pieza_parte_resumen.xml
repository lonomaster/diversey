<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:gravity="right"
    android:layout_marginTop="15dp"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/RelativeLayout1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/titulo_detalle_lote"
            android:layout_width="680dp"
            android:layout_height="40dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="15dp"
            android:background="#99219fd8"
            android:gravity="center_vertical"
            android:paddingLeft="20dp"
            android:text="PIEZA"
            android:textColor="#ffffff"
            android:textSize="7pt"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/id_pieza_hidden"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:text="x" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="680dp"
        android:layout_height="wrap_content"
        android:background="#f5f5f5"
        android:orientation="vertical"
        android:paddingLeft="10dip"
        android:paddingRight="10dip" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="30dp"
            android:gravity="center_vertical" >

            <TextView
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:text="Nombre pieza :"
                android:textSize="9pt" />

            <TextView
                android:id="@+id/textViewNombrePieza"
                android:layout_width="160dp"
                android:layout_height="40dp"
                android:layout_marginLeft="10dp"
                android:background="@drawable/background_borde_negro"
                android:gravity="center_vertical|center_horizontal"
                android:text="nombre"
                android:textSize="9pt" />

            <TextView
                android:id="@+id/CodigoTitulo"
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="Codigo :"
                android:textSize="9pt" />

            <TextView
                android:id="@+id/textViewCodigo"
                android:layout_width="160dp"
                android:layout_height="40dp"
                android:layout_marginLeft="10dp"
                android:background="@drawable/background_borde_negro"
                android:gravity="center_vertical|center_horizontal"
                android:text="Codigo"
                android:textSize="9pt" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="15dp"
            android:layout_marginTop="10dp" >

            <TextView
                android:id="@+id/textView1"
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:text="Cantidad :"
                android:textSize="9pt" />

            <TextView
                android:id="@+id/textViewCantidad"
                android:layout_width="160dp"
                android:layout_height="40dp"
                android:layout_marginLeft="10dp"
                android:background="@drawable/background_borde_negro"
                android:gravity="center_vertical|center_horizontal"
                android:text="cantidad"
                android:textSize="9pt" />

            <TextView
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="Precio c/u :"
                android:textSize="9pt" />

            <TextView
                android:id="@+id/textViewPrecio"
                android:layout_width="160dp"
                android:layout_height="40dp"
                android:layout_marginLeft="10dp"
                android:background="@drawable/background_borde_negro"
                android:gravity="center_vertical|center_horizontal"
                android:text="precio"
                android:textSize="9pt" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
