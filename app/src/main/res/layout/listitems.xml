<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/listitem_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="15dip"
    android:paddingLeft="40dip"
    android:paddingRight="40dip"
    android:paddingTop="15dip"
    tools:ignore="PxUsage" >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="200dip"
        android:layout_marginBottom="15dip"
        android:layout_marginTop="15dip" >

        <ImageView
            android:id="@+id/list_avatar"
            android:layout_width="100dip"
            android:layout_height="100dip"
            android:onClick="onClick" />

        <ImageView
            android:id="@+id/list_estado"
            android:layout_width="10dip"
            android:layout_height="fill_parent"
            android:layout_marginLeft="10dip"
            android:layout_marginRight="-10dip"/>

        <LinearLayout
            android:id="@+id/list_inner_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dip"
            android:background="@drawable/base"
            android:orientation="vertical"
            android:paddingLeft="15dip" >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/list_nombre"
                    android:layout_width="wrap_content"
                    android:layout_height="45dip"
                    android:layout_alignParentLeft="true"
                    android:gravity="center_vertical"
                    android:text="NOMBRE OT"
                    android:textSize="14pt"
                    android:textStyle="bold" />

            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.6"
                    
                    android:orientation="vertical" >

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="33dip"
                        android:orientation="horizontal" >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Site: "
                             android:textSize="12pt"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/list_nombre_empresa"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:text="test"
                            android:maxLines="1"
                            android:singleLine="true"
                            android:scrollHorizontally="true"
                             android:textSize="12pt"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="33dip"
                        android:orientation="horizontal" >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="DirecciÃ³n Empresa: "
                            android:textSize="12pt"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/list_direccion_empresa"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:maxLines="1"
                            android:singleLine="true"
                            android:scrollHorizontally="true"
                             android:textSize="12pt"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="33dip"
                        android:orientation="horizontal" >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Nombre Contacto: "
                            android:textSize="12pt"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/list_nombre_contacto"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="test"
                           android:textSize="12pt" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginRight="20dip"
                    android:gravity="center_vertical|right"
                    android:orientation="horizontal" >

                    <!--Button
                        android:id="@+id/list_contacto_fono"
                        android:layout_width="48dip"
                        android:layout_height="48dip"
                        android:background="@drawable/boton_telefono"
                        android:onClick="onClick" /-->

                    <Button
                        android:id="@+id/list_showcase"
                        android:layout_width="48dip"
                        android:layout_height="48dip"
                        android:layout_marginLeft="58dip"
                        android:background="@drawable/boton_detalle"
                        android:onClick="onClick" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="43dip"
                android:orientation="horizontal"
                android:padding="3dip" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="@string/numero_ot"
                     android:textSize="12pt"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/list_numero_ot"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="0123456789"
                     android:textSize="12pt" />

                <!--TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="13dip"
                    android:text="@string/asignacion"
                    android:textSize="8pt"
                    android:textStyle="bold" /-->

                <TextView
                    android:id="@+id/list_fecha_asignacion"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="2012-01-01"
                    android:layout_marginLeft="10dp"
                    android:textSize="11pt" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="13dip"
                    android:text="@string/ejecucion"
                    android:textSize="11pt"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/list_fecha_ejecucion"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="2012-01-01"
                    android:textSize="11pt" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
