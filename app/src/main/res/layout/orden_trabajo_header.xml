<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/orden_trabajo_header"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/fondos"
    android:orientation="vertical"
    tools:ignore="PxUsage" >

    <!-- Boton Volver header -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="75dip"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/button_back_listmap"
            android:layout_width="80dip"
            android:layout_height="30dip"
            android:layout_marginLeft="40dip"
            android:layout_marginTop="23dip"
            android:background="@drawable/volver"
            android:onClick="onClick" />

        <ImageView
            android:layout_width="75dip"
            android:layout_height="76dip"
            android:layout_marginLeft="565dip"
            android:background="@drawable/logo_app"
            android:onClick="onClick" />
    </LinearLayout>
    <!-- Lista elementos header -->

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="270dip"
        android:orientation="vertical"
        android:paddingBottom="3dip"
        android:paddingLeft="40dip"
        android:paddingRight="40dip"
        android:paddingTop="23dip" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/orden_trabajo_nombre_sucursal"
                android:layout_width="match_parent"
                android:layout_height="40dip"
                android:layout_marginTop="10dip"
                android:gravity="center_vertical"
                android:text="Nombre Sucursal"
                android:textSize="14pt"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dip"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:text="Site : "
                    android:textSize="12pt"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/orden_trabajo_cliente_caso"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:textSize="12pt" />
            </LinearLayout>
<!--  
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dip"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:text="Dirección Local : "
                    android:textSize="9pt"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/orden_trabajo_direccion_empresa"
