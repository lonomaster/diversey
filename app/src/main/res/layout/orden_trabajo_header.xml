                    android:background="@drawable/boton_mail"
                    android:onClick="onClick" /
                -->
            </LinearLayout>
        </LinearLayout>

        <ImageView
            android:layout_width="720dip"
            android:layout_height="1dip"
            android:layout_marginTop="15dip"
            android:src="@drawable/linea1" />
