                        android:gravity="center_vertical"
                        android:textSize="9pt" />
                </LinearLayout>
-->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dip"
                    android:orientation="horizontal" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:text="Fecha de Realización de OT : "
                        android:textSize="12pt"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/orden_trabajo_fecha_realizacion_head"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:text="2013-04-22"
                        android:textSize="12pt" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dip"
                    android:orientation="horizontal" >
                </LinearLayout>
                 <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dip"
                    android:orientation="horizontal" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:text="Máquina : "
                        android:textSize="12pt"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/orden_trabajo_maquina_head"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:text="2013-04-22"
                        android:textSize="12pt" />
                </LinearLayout>
                
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="right|center_vertical"
                android:gravity="right"
                android:orientation="horizontal" >

                <!--
                        Button
                        android:id="@+id/casocafe_contacto_fono"
                        android:layout_width="34dip"
