<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondo_login"
    android:orientation="vertical"
    android:paddingLeft="145dip"
    android:paddingRight="145dip"
    android:paddingTop="270dip"
    tools:context=".Login"
    tools:ignore="PxUsage" >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#faf9f5"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:paddingLeft="40dip"
        android:paddingRight="40dip"
        android:paddingTop="45dip" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical" >

            <ImageView
                android:layout_width="330dip"
                android:layout_height="133dip"
                android:gravity="center"
                android:src="@drawable/logo_diversey" />

            <TextView
                android:id="@+id/title_company_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="30dip"
                android:paddingTop="55dip"
                android:text="@string/login_title"
                android:textColor="#8bc4e7"
                android:textSize="12pt"
                android:textStyle="bold" />
        </LinearLayout>

        <TextView
            android:id="@+id/login_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dip"
            android:layout_marginRight="30dip"
            android:layout_marginTop="90dip"
            android:text="@string/bienvenida"
            android:textColor="@android:color/darker_gray"
            android:textSize="8pt" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="40dip"
            android:layout_marginTop="40dip"
            android:layout_marginBottom="30dip"
            android:gravity="center_horizontal"
            android:orientation="horizontal" >

            <Spinner
                android:id="@+id/login_users"
                android:layout_width="250dip"
                android:layout_height="wrap_content"
                android:textColor="@android:color/black"
                android:textSize="8pt" />

            <Button
                android:id="@+id/login_continue"
                android:layout_width="180dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dip"
                android:background="@drawable/selector_btn_celeste"
                android:onClick="onClick"
                android:paddingLeft="10dip"
                android:paddingRight="10dip"
                android:text="@string/siguiente"
                android:textColor="@android:color/white"
                android:textSize="8pt"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>